{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "esnext.array"],
    "noImplicitAny": false,
    "outDir": "./lib",
    "sourceMap": true,
    "noEmit": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@banou26/oz-lib": ["../lib/lib/lib/src/index"],
      "@banou26/oz-lib/*": ["../lib/lib/lib/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "targets": {
    "types": false
  }
}
